generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client" // Add this back in
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id Int @id @default(autoincrement())

  firstName String
  lastName String
  email String @unique
  password String

  createdAt DateTime @default(now())

  // Ownership(one to many)
  createdEvents Event[]

  // Attendance (many-to-many)
  eventLinks UserEvent[]
}

model Event{
  id Int @id @default(autoincrement())
  publicId String @default(uuid())

  title String
  description  String
  venue String

  //Event timing
  startsAt DateTime
  endsAt DateTime?
  
  //Metadata
  createdAt DateTime @default(now())

  // Ownership
  creatorId Int
  creator User @relation(fields:[creatorId],references:[id])

  //Attendance
  userlinks UserEvent[]
}

model UserEvent{
  userId Int
  eventId Int

  user User @relation(fields:[userId],references:[id])
  event Event @relation(fields:[eventId],references:[id])
  
  @@id([userId,eventId])
}


